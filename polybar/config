[colors]
	bg-main				= #121317
	bg-secondary			= #1F1E1F
	bg-selection			= #4A3C3B

	fg-main				= #C0B1AF
	fg-highlight 			= #F2F3E2
	fg-error			= #A02C2C
	fg-warning			= #FFB144
	fg-success			= #2C7C43

[bar/mybar]
	height				= 24
	width				= 100%
	offset-x			= 0
	offset-y			= 0

	bottom				= false
	
	background			= ${colors.bg-main}
	foreground			= #000f0f0f

	border-bottom-size		= 5
	border-top-size			= 5
	border-left-size		= 5
	border-right-size 		= 5

	border-bottom-color		= ${colors.bg-main}
	border-top-color		= ${colors.bg-main}
	border-left-color		= ${colors.bg-main}
	border-right-color		= ${colors.bg-main}

	spacing				= 0
	padding-left			= 0
	padding-right			= 0
	module-margin-left		= 0

	; Battery is only needed for a laptop
	modules-left			= workspaces
	modules-right			= volume separator network-eth separator time separator date 

	font-0				= IBM Plex Mono:size=10;2.5
	fixed-center 		       	= true

[module/workspaces]
	type				= internal/i3
	format				= <label-state> <label-mode> 
	index-sort		  	= true
	wrapping-scroll			= false
	strip-wsnumbers			= true

	label-mode-foreground		= ${colors.fg-main}
	label-mode-padding		= 1

	label-focused			= %name%
	label-focused-background	= ${colors.bg-secondary}
	label-focused-foreground  	= ${colors.fg-highlight}
	label-focused-padding 	  	= 1 

	label-unfocused			= %name%
	label-unfocused-background	= ${colors.bg-main}
	label-unfocused-foreground	= ${colors.fg-main}
	label-unfocused-padding		= 1

	label-visible			= %name%
	label-visible-background	= ${colors.bg-main}
	label-visible-foreground	= ${colors.fg-main}
	label-visible-padding 		= 1

	label-urgent			= %name%
	label-urgent-background		= ${colors.fg-error}
	label-urgent-foreground		= ${colors.fg-main}
	label-urgent-padding		= 1

	pin-workspaces 			= true

[module/separator]
	type				= custom/text
	content				= |
	content-padding			= 1
	content-background		= ${colors.bg-main}
	content-foreground		= ${colors.fg-main}

[module/time]
	type				= internal/date
	time 				= "%H:%M"
	label 				= "%time%"

	format 				= <label>
	format-padding 			= 0

	label-background		= ${colors.bg-main}
	label-foreground 		= ${colors.fg-main} 
	label-padding 			= 1
[module/date]
	type				= internal/date
	date				= "%d.%m.%Y%"
	label 				= "%date%"

	format 				= <label>
	format-padding 			= 0

	label-background		= ${colors.bg-main}
	label-foreground 		= ${colors.fg-main} 
	label-padding 			= 1

[module/volume]
	type				= internal/pulseaudio
	format-volume			= <label-volume> 
	label-volume			= Vol.: %percentage%%
	label-volume-background		= ${colors.bg-main}
	label-volume-foreground		= ${colors.fg-main}
	label-volume-padding		= 1
	label-muted			= "MUTED"
	label-muted-background		= ${colors.bg-main}
	label-muted-foreground		= ${colors.fg-error}
	label-muted-padding		= 1
	use-ui-max			= true
	interval			= 10	

[module/network-wifi]
	; Name of the network interface to display. You can get the names of the
	; interfaces on your machine with `ip link`
	; Wireless interfaces often start with `wl` and ethernet interface with `eno` or `eth`
	type				= internal/network
	interface			= wlan0
	interval			= 1.0
	format-connected 		= <ramp-signal> <label-connected>
	format-disconnected		= <label-disconnected>
	label-connected			= %essid% 
	label-connected-foreground	= ${colors.fg-main} 
	label-disconnected 		= Disconnected
	label-disconnected-foreground 	= ${colors.fg-error}

	ramp-signal-0  	  		= 0/5
	ramp-signal-1 			= 1/5
	ramp-signal-2 			= 2/5
	ramp-signal-3 			= 3/5
	ramp-signal-4 			= 4/5
	ramp-signal-5 			= 5/5
	ramp-signal-0-foreground	= ${colors.fg-error}
	ramp-signal-1-foreground	= ${colors.fg-error}
	ramp-signal-2-foreground	= ${colors.fg-error}
	ramp-signal-3-foreground	= ${colors.fg-warning}
	ramp-signal-4-foreground	= ${colors.fg-success}
	ramp-signal-5-foreground	= ${colors.fg-success}

[module/network-eth]
	type				= internal/network
	interface			= enp0s3
	format-connected 		= <label-connected>
	format-disconnected		= <label-disconnected>
	label-connected			= Connected 
	label-connected-foreground	= ${colors.fg-main}
	label-disconnected		= Disconnected
	label-disconnected-foreground	= ${colors.fg-error}

; ------ Laptop specific modules ------
[module/battery]
	; Use the following command to list batteries and adapters:
  	; $ ls -1 /sys/class/power_supply/
	type				= internal/battery
	battery				= BAT1
	adapter 			= ACAD
	format-charging 		= <label-charging>
	format-discharging 		= <label-discharging>
	label-charging 			= Charging: %percentage%%
	label-charging-foreground	= ${colors.fg-success}
	label-discharging 		= Discharging: %percentage%% 
	label-discharging-foreground	= ${colors.fg-warning}
	poll-interval 			= 5
